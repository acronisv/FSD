extend ../../layout/ui-kit
include ../../components/colors-item/colors-item

block variables
    - var title = "Colors & types"
    - var description = "Colors & types page"

block content
    .page-types
        .colors
            .colors__item-wrap
                .colors__item.colors__item--shade100
                +colors('Dark Shade 100%', '#1F2041')
            .colors__item-wrap
                .colors__item.colors__item--shade75
                +colors('Dark Shade 75%', '#1F2041')
            .colors__item-wrap
                .colors__item.colors__item--shade50
                +colors('Dark Shade 50%', '#1F2041')
            .colors__item-wrap
                .colors__item.colors__item--shade25
                +colors('Dark Shade 25%', '#1F2041')
            .colors__item-wrap
                .colors__item.colors__item--shade5
                +colors('Dark Shade 5%', '#1F2041')
            .colors__item-wrap
                .colors__item.colors__item--purple
                +colors('Purple', '#BC9CFF')
            .colors__item-wrap
                .colors__item.colors__item--green
                +colors('Green', '#6FCF97')
        .headings
            .headings__item 
                span.headings__description.headings__description--h1 H1
                p.headings__text.headings__text--h1 This one is the sub-section or widget title
            .headings__item
                span.headings__description.headings__description--h2 H2
                p.headings__text.headings__text--h2 Next one is the item title inside widgets
            .headings__item
                span.headings__description.headings__description--label H3
                p.headings__text.headings__text--label This is a label or CTA text
            .headings__item
                span.headings__description.headings__description--body-text Body
                p.headings__text.headings__text--body-text This is the body text which is used for most<br> of the design, like paragraphs, lists, etc.