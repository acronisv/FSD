extend ../../layout/main
include ../../components/dropdown/dropdown
include ../../components/input/input
include ../../components/field-subscribe/field-subscribe
include ../../components/calendar/calendar
include ../../components/checkbox/checkbox
include ../../components/checkbox-list/checkbox-list
include ../../components/information/information
include ../../components/radio/radio
include ../../components/toggle/toggle
include ../../components/like-btn/like-btn
include ../../components/rate-btn/rate-btn

block variables
    - var title = "Form elements"
    - var description = "Form elements page"

block content
    .container
        .form-elements
            .form-elements__wrapper
                .form-elements__item
                    +input({label:'text field', name:'name1', id:'textfield-id1', placeholder:'Email'})
                .form-elements__item
                    +input({label:'text field', name:'input2', id:'textfield-id2', placeholder:'This is pretty awesome'})
                .form-elements__item
                    +dropdown({label:'dropdown', name:'name3', id:'dropdown-id1', placeholder:'Сколько гостей'})
                .form-elements__item
                    +input({label:'masked text field', name:'name1', id:'masked-textfield', placeholder:'ДД.ММ.ГГГГ'})
            .form-elements__wrapper.form-elements__wrapper--group2
                .form-elements__item
                    +calendar({type:'dual', labelFrom:'date dropdown', labelTo:'date dropdown'})
                .form-elements__item.form-elements__item--small-width
                    +calendar({label:'filter date dropdown'})
                .form-elements__item.form-elements__item--small-width
                    +field-subscribe({})
                .form-elements__item.form-elements__item--small-width
                    +dropdown({label:'dropdown', name:'drop1', placeholder:'Удобства'})
                .form-elements__item.form-elements__item--small-width
                    +dropdown({label:'dropdown', name:'drop2', placeholder:'Удобства'})
                .form-elements__item.form-elements__item--small-width
                    +checkbox-list({items:['Завтрак','Письменный стол','Стул для кормления','Кроватка','Телевизор','Шампунь','Телевизор','Шампунь'], names:['breakfast','table','chair','bed','tv','shampoo','tv','shampoo']})
                .form-elements__item.form-elements__item--small-width
                    +checkbox-list({items:['Завтрак','Письменный стол','Стул для кормления','Кроватка','Телевизор','Шампунь','Телевизор','Шампунь']})
                .form-elements__item.form-elements__item--small-width
                    +information({title:'Комфорт', text:'Шумопоглощающие стены'})
                    +information({title:'Удобство', text:'Окно в каждой из спален', icon:'location_cityicon'})
            .form-elements__wrapper.form-elements__wrapper--group3
                .form-elements__item.form-elements__item--small-width
                    .form-elements__title= 'Checkbox Buttons'
                    +checkbox({name:'cb_id1', title:'Можно курить'})
                    +checkbox({name:'cb_id2', title:'Можно с питомцами'})
                    +checkbox({name:'cb_id3', title:'Можно пригласить гостей (до 10 человек)'})
                .form-elements__item
                    .form-elements__title= 'Radio buttons'
                    +radio({radio1:'Мужчина', radio2:'Женщина'})
                .form-elements__item
                    .form-elements__title= 'Toggle'
                    +toggle({title: 'Получать спецпредложения'})
                    +toggle({title: 'Получать спецпредложения'})
                .form-elements__item
                    .form-elements__title= 'Like button'
                    +like-btn
                .form-elements__item
                    .form-elements__title= 'Rate button'
                    +rate-btn
                    +rate-btn